          },
          "resend_code_time": {
            "type": "integer"
          },
          "password_reset_date": {
            "type": "date"
          },
          "status": {
            "type": "integer"
          },
          "createdAt": {
            "type": "date"
          },
          "updatedAt": {
            "type": "date"
          }
        }
